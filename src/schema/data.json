{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/w3c/browser-statuses/tree/main/src/schema/data.json",

  "description": "JSON Schema followed by data files in data folder.",

  "definitions": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "statusUrl": {
      "type": "string",
      "format": "url"
    },
    "specUrls": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "representative": {
      "type": "boolean"
    },
    "manual": {
      "type": "boolean"
    },
    "lastreviewed": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },

    "mappingstr": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "id" ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": { "$ref": "#/definitions/name" },
          "statusUrl": { "$ref": "#/definitions/statusUrl" },
          "specUrls": { "$ref": "#/definitions/specUrls" },
          "representative": { "$ref": "#/definitions/representative" },
          "manual": { "$ref": "#/definitions/manual" },
          "lastreviewed": { "$ref": "#/definitions/lastreviewed" }
        },
        "minItems": 1
      }
    },

    "statusref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bcd": {
          "$ref": "#/definitions/mappingstr"
        },
        "caniuse": {
          "$ref": "#/definitions/mappingstr"
        },
        "chrome": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "id" ],
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": { "$ref": "#/definitions/name" },
              "statusUrl": { "$ref": "#/definitions/statusUrl" },
              "specUrls": { "$ref": "#/definitions/specUrls" },
              "representative": { "$ref": "#/definitions/representative" },
              "manual": { "$ref": "#/definitions/manual" },
              "lastreviewed": { "$ref": "#/definitions/lastreviewed" }
            },
            "minItems": 1
          }
        },
        "webkit": {
          "$ref": "#/definitions/mappingstr"
        },
        "manual": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "ua", "status" ],
            "properties": {
              "ua": {
                "type": "string",
                "minLength": 1
              },
              "status": {
                "type": "string",
                "enum": ["notsupported", "consideration", "indevelopment", "experimental", "shipped"]
              },
              "source": {
                "type": "string",
                "minLength": 1
              },
              "date": {
                "type": "string",
                "format": "date"
              },
              "comment": {
                "type": "string",
                "minLength": 1
              },
              "prefix": {
                "type": "boolean"
              },
              "flag": {
                "type": "boolean"
              }
            }
          },
          "minItems": 1
        }
      }
    }
  },


  "type": "object",
  "additionalProperties": false,
  "properties": {
    "statusref": {
      "$ref": "#/definitions/statusref"
    },

    "features": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "minLength": 1
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "url"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "statusref": {
            "$ref": "#/definitions/statusref"
          }
        },
        "required": ["title"],
        "additionalProperties": false
      }
    },

    "featuresCoverage": {
      "type": "string",
      "enum": ["full", "partial"]
    },

    "polyfills": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url", "label"],
        "properties": {
          "url": {
            "type": "string",
            "format": "url"
          },
          "label": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },

    "notes": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    }
  }
}
