{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/w3c/browser-statuses/tree/main/src/schema/index.json",

  "description": "JSON Schema followed by the generated index.json file.",

  "definitions": {
    "support": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ua": {
            "type": "string",
            "enum": [
              "baidu_android",
              "chrome",
              "chrome_android",
              "edge",
              "firefox",
              "firefox_android",
              "opera",
              "qq_android",
              "safari",
              "safari_ios",
              "samsunginternet_android",
              "uc_android",
              "webkit"
            ]
          },

          "status": {
            "type": "string",
            "enum": ["", "consideration", "indevelopment", "experimental", "shipped"]
          },
          "source": {
            "type": "string",
            "minLength": 1,
            "enum": ["bcd", "caniuse", "chrome", "edge", "webkit", "feedback", "other"]
          },
          "href": {
            "type": "string",
            "format": "uri"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "prefix": {
            "type": "boolean"
          },
          "flag": {
            "type": "boolean"
          },
          "selected": {
            "type": "boolean"
          },
          "guess": {
            "type": "boolean"
          },
          "partial": {
            "type": "boolean"
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  },

  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "shortname": {
        "type": "string",
        "pattern": "^[\\w\\-]+$"
      },
      "support": {
        "$ref": "#/definitions/support"
      },
      "features": {
        "type": "object",
        "propertyNames": {
          "type": "string",
          "minLength": 1
        },
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "support": {
              "$ref": "#/definitions/support"
            }
          }
        }
      },

      "polyfills": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["url", "label"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "label": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}